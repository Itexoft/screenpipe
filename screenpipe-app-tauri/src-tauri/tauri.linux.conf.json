{
    "bundle": {
        "targets": [
            "app",
            "deb",
            "appimage"
        ],
        "externalBin": [
            "binaries/screenpipe",
            "binaries/bun"
        ],
        "linux": {
            "deb": {
                "depends": [
                    "tesseract-ocr",
                    "libtesseract-dev",
                    "ffmpeg"
                ]
            },
            "appimage": {
                "bundleMediaFramework": true,
                "files": {
                    "/usr/bin/tesseract": "tesseract",
                    "binaries/ffmpeg-${triple}": "/usr/bin/ffmpeg",
                    "binaries/ffprobe-${triple}": "/usr/bin/ffprobe"
                }
            }
        }
    }
}
