{
    "bundle": {
        "externalBin": [
            "binaries/screenpipe",
            "binaries/bun"
        ],
        "linux": {
            "deb": {
                "depends": [
                    "tesseract-ocr",
                    "libtesseract-dev",
                    "ffmpeg"
                ]
            },
            "appimage": {
                "files": {
                    "/usr/bin/tesseract": "binaries/tesseract*",
                    "/usr/bin/ffmpeg": "binaries/ffmpeg*",
                    "/usr/bin/ffprobe": "binaries/ffprobe*"
                }
            }
        }
    }
}
