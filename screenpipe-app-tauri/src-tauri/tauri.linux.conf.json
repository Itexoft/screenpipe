{
    "bundle": {
        "externalBin": [
            "binaries/screenpipe",
            "binaries/bun"
        ],
        "linux": {
            "deb": {
                "depends": [
                    "tesseract-ocr",
                    "libtesseract-dev",
                    "ffmpeg"
                ]
            },
            "appimage": {
                "files": {
                    "/usr/bin/tesseract": "tesseract",
                    "binaries/ffmpeg": "/usr/bin/ffmpeg",
                    "binaries/ffprobe": "/usr/bin/ffprobe"
                }
            }
        }
    }
}
